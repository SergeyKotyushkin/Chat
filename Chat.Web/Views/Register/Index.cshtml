@model Chat.Web.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Register</title>
    <link href="~/Content/Css/common.css" rel="stylesheet" />
    <link href="~/Content/Css/register.css" rel="stylesheet" />
    <link href="~/Content/Css/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
<div>
@using (Html.BeginForm("Index", "Register", FormMethod.Post))
{
    <div class="panel">
        <div class="h4">Fill Form</div>
        <span>Login</span>
        @Html.TextBoxFor(m => m.Login, new { @class = "form-control"})
        <span>Password</span>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        <span>Repeat Password</span>
        @Html.PasswordFor(m => m.PasswordRepeat, new { @class = "form-control" })
        <div class="hor-center-parent">
            <button class="btn btn-default" type="submit">Register</button>
        </div>
        @Html.ActionLink("Login Page", "Index", "Login", null, new { @class = "btn btn-link" })
    </div>

    if (Model.MessageViewModel != null && Model.MessageViewModel.HasError)
    {
        <div class="alert alert-danger">
            @Model.MessageViewModel.Message
        </div>
    }

    if (Model.MessageViewModel != null && Model.MessageViewModel.HasSuccess)
    {
        <div class="alert alert-success">
            @Model.MessageViewModel.Message
        </div>
    }
} 
</div>
</body>
</html>